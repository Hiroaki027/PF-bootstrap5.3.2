<h1>投稿一覧</h1>
  <table class= "table table-hover">
    <thead>
      <tr>
      <th>タイトル</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <% @posts.each  do |f| %>
        <tr>
          <td><%= f.title %></td>
          <td><%= image_tag f.post_images[0].variant(resize: '150x150') %></td>
          <td><%= f.member.nick_name %></td>
          <td><%= f.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
          <td><%= link_to "投稿詳細", post_path(f.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
