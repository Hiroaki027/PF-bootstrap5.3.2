<div class= "container">
  <div class= "row">
    <div class= "col-md-8 offset-md-1">
      <h2>会員詳細<i class="fa-solid fa-user-group ml-2"></i></h2>
        <%= form_with model: @member, url: admin_member_path do |f| %>
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td style="width: 30%">氏名</td>
              <td style="width: 35%"><%= f.text_field :last_name %></td>
              <td style="width: 35%"><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_deleted, "false" %>
                <%= f.label :is_deleted_false, "有効", class:"mr-3"%>
                <%= f.radio_button :is_deleted, "true" %>
                <%= f.label :is_deleted_true, "退会" %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class:"btn btn-success btn-lg px-5 py-3" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
